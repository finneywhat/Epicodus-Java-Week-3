  <div class="row">
    <h2 class="title-center">Barber Details</h2>
    <div class="col-md-5 col-md-offset-1">
      <div class="row well hover-shadow">
        <h3 class="panel-title">$stylist.getName() Details</h3>
        <hr class="panel-hr">
        <div id="stylist-details">
          <h5>Hire Date</h5>
          <p>$stylist.getHireDate()</p>
          <hr class="middle-hr">
          <h5>Salary</h5>
          <p>$ $stylist.getSalary()</p>
          <hr class="middle-hr">
          <h5>Work Schedule</h5>
          <p>$stylist.getSchedule()</p>
        </div>
      </div>
      <div class="row well hover-shadow">
        <h3 class="panel-title">Client List <span class="badge num-clients rel-position">$stylist.getClientSize()</span></h3>
        <hr class="panel-hr">
        <div id="stylist-info">
          #if ($clients.size() > 0)
          <ol>
            #foreach ($client in $clients)
            <li><a href="/stylists/$stylist.getId()/clients/$client.getId()">$client.getName()</a></li>
            #end
          </ol>
          #else
          <p style="margin-left:30px;"><em>(No clients)</em></p>
          <hr>
          #end
        </div>
        <form action="/stylists/$stylist.getId()/client/new" method="get">
          <button type="submit" class="btn btn-success btn-lg btn-block">Add Client <span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span></button>
        </form>
      </div>
    </div>
